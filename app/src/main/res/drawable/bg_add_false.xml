<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框的颜色 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/btnColor" />
            <corners android:radius="10dip"/>
        </shape>

    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0.5dp"
        android:top="0dp">
        <!--设置只有底部有边框-->
        <shape  android:shape="oval">
            <!-- 主体背景颜色值 -->
            <corners android:radius="10dip"/>
            <solid android:color="@color/btnColor" />
        </shape>
    </item>
</layer-list>
